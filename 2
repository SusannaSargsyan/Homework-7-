class Account {
	constructor(id, name, balance) 
	{
		this._id = id;
		this._name = name;
		this._balance = balance
	}

	get id() 
	{
		return this._id;
	}

	get name() 
	{
		return this._name;
	}	
	
	set name(value) 
	{
		this._name = value;
	}

	get balance() 
	{
		return this._balance;
	}
	
	set balance(value) 
	{
		this._balance  = value;
	}

	credit(amount) 
	{
		
         this._balance += amount;
         return this._balance;
	}

	debit(amount) 
	{
		if(amount < this._balance) 
        {
			this._balance -= amount;
			return amount;
        }
		else {console.log ("Amount exceeds balance")}		
	}

	transferTo(anotherAccount, amount) 
	{
		if(amount < this.balance) 
        {
			anotherAccount.credit(this.debit(amount));
			return this.balance;
        }
		else {console.log("Amount exceeds balance.")}
		
	}

	static identifyAccounts(Account1, Account2) 
	{
		if(Account1._id === Account2._id && Account1._name === Account2._name && Account1._balance === Account2._balance)
        {
			return true;
        }
		else {return false;}
	}

	toString() 
	{
		return `id: ${this.id}, name: ${this.name}, balance: ${this.balance}`;
	}
}

let A1 = new Account(1, "Account1", 5000);
let A2 = new Account(2, "Account2", 2000);
